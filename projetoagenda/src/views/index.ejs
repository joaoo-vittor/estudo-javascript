<%- include('includes/headStart') %>

<%- include('includes/navBar') %>

<div class="container">
  <div class="content">
    <h1>Agenda</h1>
    <p class="info-ag">Seus contatos estão abaixo</p>

    <%- include('includes/messages') %>

    <div class="tabela-contato">
      <table class="table">
        <% if(contatos.length > 0) { %>
          <% contatos.forEach(contato => { %>

            <tr>
              <td><%= contato.nome  %></td>
              <td><%= contato.sobrenome  %></td>
              <td><%= contato.telefone  %></td>
              <td><%= contato.email  %></td>
              <td>
                <a class="edt-del edita" href="/contato/<%= contato._id %>">Editar</a>
              </td>
              <td>
                <a class="edt-del deleta" href="/contato/delete/<%= contato._id %>">Deleter</a>
              </td>
            </tr>

          <% }); %>
        <% } else { %>
          <h1>Você não tem contato(s) cadastrado(s)</h1>
        <% } %>
      </table>
    </div>
  </div>
</div>

<%- include('includes/headEnd') %>
