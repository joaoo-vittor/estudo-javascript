<%- include('includes/headStart') %>

<%- include('includes/navBar') %>

<div class="container">
  <div class="content-login">
    <div class="info-login-cadastro">
      <h1>Criar Conta Ou Entrar</h1>
      <p>Faça seu Login OU crie sua conta abaixo</p>

      <%- include('includes/messages') %>

    </div>
    <div class="linha">
      <div class="campo-entrada">
        <h2>Faça seu Cadastro</h2>
        <p>Se você não tem conta, preencha o formulário abaixo:</p>
        <form class="form-cadastro" action="/login/register" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <label for="email">Seu e-mail</label>
          <input class="cadastro-input-email" type="email" name="email">
          <label for="senha">Senha</label>
          <input class="cadastro-input-senha" type="password" name="senha">
          <button class="btn-criar-conta btn-style">Criar minha conta</button>
        </form>
      </div>
      <div class="campo-entrada">
        <h2>Faça seu Login</h2>
        <p class="correcao-espaco">Se você já tem conta, faça seu login abaixo:</p>
        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <label for="email">Seu e-mail</label>
          <input class="login-input-email" type="email" name="email">
          <label for="senha">Senha</label>
          <input class="login-input-senha" type="password" name="senha">
          <button class="btn-entrar btn-style">Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('includes/headEnd') %>
